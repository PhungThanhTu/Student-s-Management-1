<UserControl x:Class="UI_for_Project.SubjectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI_for_Project"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="120">
    
        <Button x:Name="btnS1"
                Width="90"
                Height="60"
                Background="#127475"
                >
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="txtSubjectName" Foreground="#F5DFBB" FontFamily="Roboto" FontSize="12"> SUBJECT 1</TextBlock>
                <TextBlock x:Name="txtCount" Foreground="#FFFFFF" FontFamily="Roboto" FontSize="9"> Count : 20</TextBlock>
            </StackPanel>

        </Button>
   
</UserControl>
